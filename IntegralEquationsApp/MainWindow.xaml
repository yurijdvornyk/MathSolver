<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegralEquationsApp"
        xmlns:problemSelector="clr-namespace:IntegralEquationsApp.Components.ProblemSelector"
        xmlns:InputData="clr-namespace:IntegralEquationsApp.Components.InputData" x:Class="IntegralEquationsApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <problemSelector:ProblemSelectorView x:Name="problemSelector" Margin="10" VerticalAlignment="Top" />
        <InputData:InputDataView x:Name="inputDataView" Margin="10,41,10,10"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="button_Click"/>
    </Grid>
</Window>
